<Window x:Class="DynDns53.UI.AddDomainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynDns53.UI"
        mc:Ignorable="d"
        Title="AddDomain" Height="148" Width="300">
    <Grid>
        <Button x:Name="addButton" Content="Add Domain" HorizontalAlignment="Left" VerticalAlignment="Top" Width="282" Margin="0,86,0,0" Click="addButton_Click"/>
        <Label x:Name="label" Content="Domain Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <Label x:Name="label_Copy" Content="Zone ID:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,41,0,0" Width="89"/>
        <TextBox x:Name="domainNameTextBox" HorizontalAlignment="Left" Height="23" Margin="94,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188"/>
        <TextBox x:Name="zoneIdTextBox" HorizontalAlignment="Left" Height="23" Margin="94,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188"/>

    </Grid>
</Window>
